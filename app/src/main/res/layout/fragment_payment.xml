<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#fff"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btnBackOrder"
                        android:padding="4dp"
                        android:background="@drawable/boder_round_grey"
                        android:src="@drawable/ic_back_white"
                        android:layout_width="32dp"
                        android:layout_height="32dp">
                    </ImageView>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="Payment"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

                <View
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc">
                </View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_location"
                        android:layout_width="30dp"
                        android:layout_height="30dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Delivery address"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Hue Nguyen | 0962686868"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Ho Chi Minh City"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward_ios_black"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </ImageView>


                </LinearLayout>
                <View
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc">
                </View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="@drawable/boder_box"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nike"
                        android:layout_width="0dp"
                        android:layout_height="100dp">

                    </ImageView>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:layout_weight="6"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:text="Nike Air Force 1"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:text="Size: 42"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="$ 250"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:gravity="right"
                                android:text="x2"
                                android:textSize="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                // Layout Voucher
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_voucher"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:text="Voucher"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_marginRight="16dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="Enter the code"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward_ios_black"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </ImageView>

                </LinearLayout>
                <View
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc">
                </View>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#333"
                        android:layout_gravity="center"
                        android:text="Total (2 products):"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="$ 500"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>


            </LinearLayout>

            // mode of payment
            <LinearLayout
                android:background="#fff"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_wallet"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:text="Mode of payment"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:background="@drawable/boder_box"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_give_money"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Payment of Delivery"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_circle_check_solid"
                        android:layout_width="18dp"
                        android:layout_height="18dp">
                    </ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:background="@drawable/boder_box"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_card"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Credit card/ Debit card"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_circle_check_solid"
                        android:layout_width="18dp"
                        android:layout_height="18dp">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:background="@drawable/boder_box"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/logo_momo"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Momo Money"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_circle_check_solid"
                        android:layout_width="18dp"
                        android:layout_height="18dp">
                    </ImageView>

                </LinearLayout>




            </LinearLayout>

            // Detal products
            <LinearLayout
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_receipt_dollar"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:text="Billing Details"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#333"
                        android:layout_gravity="center"
                        android:text="Total"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="$ 500"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#333"
                        android:layout_gravity="center"
                        android:text="Shiping cost"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="$ 5"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#333"
                        android:layout_gravity="center"
                        android:text="Total Payment"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="$ 550"
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

            </LinearLayout>


            // layout Note
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icon_notes"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:text="Note"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <EditText
                    android:textSize="14dp"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/boder_box"
                    android:hint="Note for the shop..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    // Navbar Shop Now
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/boder_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_gravity="center"
                android:background="#fff"
                android:layout_width="1dp"
                android:layout_height="40dp">
            </View>

            <LinearLayout
                android:background="#ccc"
                android:paddingRight="16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total payment">
                </TextView>
                <TextView
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 550">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvOrder"
                android:background="#E24647"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Order">
            </TextView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>