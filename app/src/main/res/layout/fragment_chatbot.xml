<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".ChatbotFragment">
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_weight="0"
            android:id="@+id/btnBackChat"
            android:padding="4dp"
            android:background="@drawable/boder_round_grey"
            android:src="@drawable/ic_back_white"
            android:layout_width="32dp"
            android:layout_height="32dp">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="right"
                android:src="@drawable/ic_more_vert"
                android:layout_width="32dp"
                android:layout_height="32dp">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/boder_box2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="134dp">
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_weight="4"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fff">
                </com.makeramen.roundedimageview.RoundedImageView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="-4dp"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:text="Nike Air Force 1"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:text="@string/text_price"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textColor="@color/red"
                        android:text="$ 250"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="-4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc">

        </View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:background="#ccc"
                android:layout_width="1dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:textSize="14dp"
                android:textColor="#333"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Buy Now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:background="@drawable/boder_box4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:text="Is this product still in stock?"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_gravity="right"
            android:textColor="#eee"
            android:text="7:06"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="100dp"
        android:padding="10dp"
        android:background="@drawable/boder_btn2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333"
            android:text="4HShoe hi Hue! Thank you for watching our product\nABC"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_gravity="right"
            android:textColor="#aaa"
            android:text="7:06"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    // Navbar Order
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/boder_bgroud1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <HorizontalScrollView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="8dp"
                        android:background="@drawable/boder_btn2"
                        android:text="Is this product still in stock!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:padding="8dp"
                        android:background="@drawable/boder_btn2"
                        android:text="Thank you so much!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="12dp"
                        android:padding="8dp"
                        android:background="@drawable/boder_btn2"
                        android:text="Is there free shipping?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                    </TextView>

                </RadioGroup>


            </HorizontalScrollView>







        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_add_around"
                android:gravity="center"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:background="@drawable/boder_btn2"
                    android:hint="Type your text..."
                    android:padding="8dp"
                    android:textSize="16dp"></EditText>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-40dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/icon_happy"
                    android:gravity="center"></ImageView>

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>