<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:padding="16dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Remove"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textColor="#111"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:text="FILTER"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/tvClose"
            android:gravity="right"
            android:layout_weight="1"
            android:text="Close"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    // Start Container Short
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:text="SORT"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                // BtnRadio 1
                <RadioButton
                    android:textSize="16dp"
                    android:text="Most Popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>
                // BtnRadio 2
                <RadioButton
                    android:textSize="16dp"
                    android:text="Just Updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>
                // BtnRadio 3
                <RadioButton
                    android:textSize="16dp"
                    android:text="Best Selling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </RadioButton>

            </RadioGroup>


        </LinearLayout>


    </LinearLayout>
    // End Container Short
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:text="FILTER"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:text="Color"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        app:riv_oval="true"
                        android:src="#F5F5DC"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </com.makeramen.roundedimageview.RoundedImageView>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_marginLeft="12dp"
                        app:riv_oval="true"
                        android:src="#434A54"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </com.makeramen.roundedimageview.RoundedImageView>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_marginLeft="12dp"
                        app:riv_oval="true"
                        android:src="#F39C11"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </com.makeramen.roundedimageview.RoundedImageView>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_marginLeft="12dp"
                        app:riv_oval="true"
                        android:src="#5D9CEC"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </com.makeramen.roundedimageview.RoundedImageView>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_marginLeft="12dp"
                        app:riv_oval="true"
                        android:src="#FCCACD"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </com.makeramen.roundedimageview.RoundedImageView>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:text="Price ($)"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:background="#eee"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="number"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_weight="5"
                        android:background="@drawable/boder_box"
                        android:hint="Min"
                        android:textSize="16dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </EditText>
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="0"
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:background="#111">
                    </View>

                    <EditText
                        android:inputType="number"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_weight="5"
                        android:textSize="16dp"
                        android:background="@drawable/boder_box"
                        android:hint="Max"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </EditText>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginRight="8dp"
                        android:background="#F5F5DC"
                        android:text="0 - $100"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="#F5F5DC"
                        android:text="$100 - $200"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5DC"
                        android:text="$200 - $300"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>
                <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc">
                </View>
                <TextView
                    android:text="Size"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton

                                android:textSize="16dp"
                                android:text="34"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="35"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="36"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="37"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="38"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="39"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="40"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="41"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="42"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="43"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="44"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>
                            <RadioButton
                                android:layout_marginLeft="12dp"
                                android:textSize="16dp"
                                android:text="45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </RadioButton>

                        </RadioGroup>




                    </HorizontalScrollView>
                </LinearLayout>


                <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc">
                </View>
                <TextView
                    android:text="Rate"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:text="5 stars"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:text="4 stars"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:text="3 stars"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:text="2 stars"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:text="1 star"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_marginTop="12dp"
            android:background="#333"
            android:text="Apply Filter"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>






    </LinearLayout>






</LinearLayout>