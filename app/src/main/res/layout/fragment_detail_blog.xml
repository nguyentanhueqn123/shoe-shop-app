                        android:layout_width="24dp"
                        android:layout_height="24dp">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:text="Like"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>


                </LinearLayout>

                <LinearLayout
