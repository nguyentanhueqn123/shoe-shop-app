<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".DetailRateFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="#fff"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnBackDetailRate"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/boder_round_grey"
            android:padding="4dp"
            android:src="@drawable/ic_back_white">
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#fff"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fff"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:text="Nike Air Force 1"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Size: 42"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:text="x2"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:gravity="right"
                        android:text="$ 250"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333"
                android:layout_gravity="center"
                android:text="Total (2 products):"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="right"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="$ 500"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <View
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc">
        </View>
        <View
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc">
        </View>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textColor="#333"
            android:text="Product quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>
            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>
            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>
            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>
            <ImageView
                android:src="@drawable/ic_star_half"
                android:layout_width="26dp"
                android:layout_height="26dp">
            </ImageView>
            <TextView
                android:layout_gravity="center"
                android:textColor="#ccc"
                android:textSize="18dp"
                android:text="Great"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="@drawable/boder_btn2"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/boder_box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_camera"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </ImageView>
            <TextView
                android:layout_marginTop="4dp"
                android:textColor="#333"
                android:text="Add Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <View
            android:layout_weight="0"
            android:layout_width="10dp"
            android:layout_height="2dp">
        </View>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/boder_box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_video"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </ImageView>
            <TextView
                android:textColor="#333"
                android:text="Add Video"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        t<TextView
        android:textColor="#333"
        android:textSize="18dp"
        android:text="My rate: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:gravity="top"
            android:layout_marginTop="8dp"
            android:hint="Write your review..."
            android:padding="10dp"
            android:background="@drawable/boder_box2"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </EditText>
        <Button
            android:id="@+id/btnSubmitRate"
            android:textColor="#fff"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_btn"
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>




</LinearLayout>