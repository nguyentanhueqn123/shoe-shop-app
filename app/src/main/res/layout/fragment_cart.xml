<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_cart"
    android:background="#fff"
    tools:context=".CartFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#fff"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_shopping_cart"
                    android:layout_width="28dp"
                    android:layout_height="28dp">

                </ImageView>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:text="CART"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <CheckBox
                android:id="@+id/cbAll"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#111"
                android:text="All product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </CheckBox>
            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc">
            </View>
            <LinearLayout
                android:id="@+id/layoutChooseItem"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cbItem1"
                        android:layout_marginTop="-12px"
                        android:layout_marginLeft="-7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:padding="2dp"
                        android:background="@drawable/boder_box"
                        android:src="@drawable/giay_demo"
                        android:layout_width="match_parent"
                        android:layout_height="156dp">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:text="Nike Air Force 1"
                            android:textSize="18dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:id="@+id/btnCloseItem"
                            android:layout_marginRight="-7dp"
                            android:padding="4dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_close"
                            android:layout_width="30dp"
                            android:layout_height="30dp">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="20dp"
                            android:background="@color/yellow"
                            android:text="$ 250"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:text="@string/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="16dp"
                        android:text="Size: 42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:background="@drawable/boder_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btnRemove1"
                            android:padding="8dp"
                            android:src="@drawable/ic_baseline_remove_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvQuantity1"
                            android:text="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <ImageView
                            android:id="@+id/btnAdd1"
                            android:padding="8dp"
                            android:src="@drawable/ic_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cbItem2"
                        android:layout_marginTop="-12px"
                        android:layout_marginLeft="-7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:padding="2dp"
                        android:background="@drawable/boder_box"
                        android:src="@drawable/giay_demo"
                        android:layout_width="match_parent"
                        android:layout_height="156dp">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:text="Nike Air Force 1"
                            android:textSize="18dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_marginRight="-7dp"
                            android:padding="4dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_close"
                            android:layout_width="30dp"
                            android:layout_height="30dp">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="20dp"
                            android:background="@color/yellow"
                            android:text="$ 250"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:text="@string/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="16dp"
                        android:text="Size: 42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:background="@drawable/boder_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/ic_baseline_remove_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/ic_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="120dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cbItem3"
                        android:layout_marginTop="-12px"
                        android:layout_marginLeft="-7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:padding="2dp"
                        android:background="@drawable/boder_box"
                        android:src="@drawable/giay_demo"
                        android:layout_width="match_parent"
                        android:layout_height="156dp">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:text="Nike Air Force 1"
                            android:textSize="18dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_marginRight="-7dp"
                            android:padding="4dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_close"
                            android:layout_width="30dp"
                            android:layout_height="30dp">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="20dp"
                            android:background="@color/yellow"
                            android:text="$ 250"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:text="@string/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="16dp"
                        android:text="Size: 42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:background="@drawable/boder_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/ic_baseline_remove_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/ic_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>




    // Navbar Order
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/layoutTest"
            app:layout_constraintEnd_toEndOf="@id/layoutTest"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#333"
                android:text="Total payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginLeft="6dp"
                android:textSize="18dp"
                android:textColor="#333"
                android:text="(product)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#333"
                android:text="$ 500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTest"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvBuyMore1"
                android:background="#fff"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Buy more">
            </TextView>


            <TextView
                android:id="@+id/tvOrder1"
                android:background="#E24647"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Order">
            </TextView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>